<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<VBox alignment="CENTER" fillWidth="false" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.gui.view.profile.ProfileViewController">

        <Label prefHeight="31.0" prefWidth="187.0" text="Your Profile">
            <font>
                <Font size="26.0" />
            </font>

            <VBox.margin>
                <Insets bottom="15.0" />
            </VBox.margin>
        </Label>

        <Label prefHeight="16.0" prefWidth="189.0" text="Username :">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <Label fx:id="usernameLabel" text="defaultValue">

            <font>
                <Font size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="50.0" />
            </VBox.margin>
        </Label>

        
    <!-- Statistics button -->
    <Button onMouseClicked="#goToStatisticsClicked" style="-fx-background-color: transparent">
        <graphic>
            <FontIcon iconLiteral="mdi2c-chart-areaspline" iconSize="40" />
        </graphic>
    </Button>
    
    <Button fx:id="logoutButton" mnemonicParsing="false" onMouseClicked="#handleLogoutButtonClicked" text="Logout" />
   <padding>
      <Insets bottom="10.0" />
   </padding>
    
</VBox>
