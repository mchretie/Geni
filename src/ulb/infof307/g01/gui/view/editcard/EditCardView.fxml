      fx:controller="ulb.infof307.g01.gui.view.editcard.EditCardViewController">
    <Text text="Modifier l'avant de la carte" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="27.0"/>
        </font>
    </Text>
    <HTMLEditor fx:id="htmlEditor" maxWidth="580.0" prefHeight="300.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </HTMLEditor>
    <Button mnemonicParsing="false" onMousePressed="#onSaveButtonClicked" text="Enregistrer">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Button>
</VBox>
