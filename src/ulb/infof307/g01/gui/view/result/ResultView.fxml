<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.gui.view.result.ResultViewController">

   <FlowPane prefHeight="402.0" prefWidth="600.0">
      <children>
         <LineChart prefHeight="150.0" prefWidth="282.0">
           <xAxis>
             <CategoryAxis side="BOTTOM" />
           </xAxis>
           <yAxis>
             <NumberAxis side="LEFT" />
           </yAxis>
         </LineChart>

           <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label text="Temps total : ">
                      <font>
                          <Font size="16.0" />
                      </font>
                  </Label>
                  <Label fx:id="totalTimeLabel" text="200">
                      <font>
                          <Font name="System Bold" size="35.0" />
                      </font>
                  </Label>
                </children>
           </AnchorPane>
          <AnchorPane prefHeight="200.0" prefWidth="200.0">
              <children>
                  <Label text="Temps moyen : ">
                      <font>
                          <Font size="16.0" />
                      </font>
                  </Label>
                  <Label fx:id="avgTimeLabel" text="200">
                      <font>
                          <Font name="System Bold" size="35.0" />
                      </font>
                  </Label>
              </children>
          </AnchorPane>
         <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <Label text="Votre score : ">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Label fx:id="scoreLabel" layoutX="87.0" layoutY="-1.0" text="200">
                    <font>
                        <Font name="System Bold" size="35.0" />
                    </font>
                </Label>
            </children>
         </AnchorPane>
      </children>
   </FlowPane>
    <Button fx:id="goToMenuButton" mnemonicParsing="false" onMouseClicked="#onGoToMenuClicked" text="Retour">
        <VBox.margin>
            <Insets bottom="15.0" top="10.0" />
        </VBox.margin>
    </Button>
</VBox>
