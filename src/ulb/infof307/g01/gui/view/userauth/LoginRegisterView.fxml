<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.gui.view.userauth.LoginRegisterViewController">
    <center>
        <HBox fx:id="mainHbox" alignment="CENTER" spacing="50">

            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label text="Log-in" VBox.vgrow="ALWAYS" />

                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <Separator style="-fx-background-color: black" />
                    <TextField fx:id="usernameInput" onKeyPressed="#handleLoginKeyPressed" promptText="Username">
                  <VBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </VBox.margin></TextField>
                    <PasswordField fx:id="passwordInput" onKeyPressed="#handlePasswordKeyPressed" promptText="Password">
                  <VBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </VBox.margin></PasswordField>

                    <HBox alignment="CENTER">
                        <Button fx:id="loginButton" onMouseClicked="#handleLoginClicked" text="Log-in" />
                    </HBox>
                </VBox>

                <HBox.margin>
                    <Insets />
                </HBox.margin>

            </VBox>

            <Separator orientation="VERTICAL" />

            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label text="Register" VBox.vgrow="ALWAYS" />
                <VBox spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Separator style="-fx-background-color: black" />

                    <TextField fx:id="registerUsernameInput" promptText="Username">
                  <VBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </VBox.margin></TextField>
                    <PasswordField fx:id="registerPasswordInput" promptText="Password">
                  <VBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </VBox.margin></PasswordField>
                    <PasswordField fx:id="confirmPasswordInput" promptText="Confirm Password">
                  <VBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </VBox.margin></PasswordField>

                    <HBox alignment="CENTER">
                        <Button fx:id="registerButton" text="Register" />
                    </HBox>

                </VBox>
            </VBox>

        </HBox>
    </center>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>

</BorderPane>
