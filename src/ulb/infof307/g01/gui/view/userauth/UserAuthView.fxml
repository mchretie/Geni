<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" prefHeight="388.0" prefWidth="531.0" style="-fx-background-color: #2C3F4E;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.gui.view.userauth.UserAuthViewController">

    <padding>
        <Insets bottom="270" left="100" />

    </padding>
    <VBox fx:id="registerVBOX" alignment="CENTER_LEFT" fillWidth="false" visible="false">
        <Label alignment="CENTER" prefHeight="29.0" prefWidth="221.0" text="Créer un compte" textAlignment="CENTER" textFill="WHITE" translateX="30.0">
            <font>
                <Font name="Arial Black" size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </Label>

              <TextField fx:id="registerUsernameField" onKeyPressed="#handleRegisterUsernameKeyPressed" promptText="Identifiant" style="-fx-background-radius: 5;">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
            <prefWidth>300.0</prefWidth>
            <prefHeight>40.0</prefHeight>
        </TextField>

              <PasswordField fx:id="registerPasswordField" onKeyPressed="#handleRegisterPasswordKeyPressed" promptText="Mot de passe" style="-fx-background-radius: 5;">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
            <prefWidth>300.0</prefWidth>
            <prefHeight>40.0</prefHeight>
        </PasswordField>

              <PasswordField fx:id="confirmPasswordField" onKeyPressed="#handleRegisterConfPasswordKeyPressed" onKeyTyped="#handleRegisterConfPasswordKeyTyped" promptText="Confirmez le mot de passe" style="-fx-background-radius: 5;">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
            <prefWidth>300.0</prefWidth>
            <prefHeight>40.0</prefHeight>
        </PasswordField>

              <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterButtonClicked" prefHeight="34.0" prefWidth="299.0" style="-fx-background-color: #3EB942; -fx-background-radius: 5;" text="S'inscrire" textFill="WHITE">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
         <font>
            <Font size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>

              <Hyperlink onAction="#handleToLoginClicked" text="Déjà un compte ? Connectez-vous." textFill="WHITE" translateX="70.0">
            <font>
                <Font size="11.0" />
            </font>
        </Hyperlink>

          </VBox>

          <VBox fx:id="loginVBOX" alignment="CENTER_LEFT" fillWidth="false" prefHeight="96.0" prefWidth="300.0">
        <Label alignment="BASELINE_CENTER" contentDisplay="TEXT_ONLY" layoutX="100.0" prefHeight="29.0" prefWidth="293.0" text="Entrer vos informations" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </Label>

              <TextField fx:id="loginUsernameField" onKeyPressed="#handleLoginUsernameKeyPressed" promptText="Identifiant" style="-fx-background-radius: 5;">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
            <prefWidth>300.0</prefWidth>
            <prefHeight>40.0</prefHeight>
        </TextField>

              <PasswordField fx:id="loginPasswordField" onKeyPressed="#handleLoginPasswordKeyPressed" promptText="Mot de passe" style="-fx-background-radius: 5;">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
            <prefWidth>300.0</prefWidth>
            <prefHeight>40.0</prefHeight>
        </PasswordField>

              <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButtonClicked" prefHeight="34.0" prefWidth="299.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-background-color: #3EB942;" text="Se connecter" textFill="WHITE">

            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
         <font>
            <Font name="System Font" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>

              <Hyperlink onAction="#handleToRegisterClicked" prefHeight="18.0" prefWidth="164.0" text="Pas de compte ? Inscrivez-vous ici" textFill="WHITE" translateX="75.0">

            <font>
                <Font size="11.0" />
            </font>
        </Hyperlink>
    </VBox>
</StackPane>
