<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<BorderPane fx:id="borderPane" minHeight="300.0" minWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.gui.view.deckpreview.DeckPreviewViewController">

    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #449a6c">
            <Label fx:id="deckNameLabel" text="Deck name" HBox.hgrow="ALWAYS">
                <font>
                   <Font size="21.0" />
                </font>
            </Label>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="40" style="-fx-background-color: white">
            <VBox alignment="TOP_CENTER" spacing="40" HBox.hgrow="ALWAYS">
                <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label text="Card count">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>

                    <Label fx:id="cardCountLabel" text="X cartes">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                </VBox>

                <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label text="Highscore">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>

                    <Label fx:id="highestScoreLabel" text="X points">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                </VBox>
                <padding>
                   <Insets left="15.0" top="15.0" />
                </padding>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            </VBox>

            <VBox alignment="TOP_CENTER" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <Label text="Game history">
                    <font>
                        <Font size="18.0" />
                    </font>
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
                </Label>
                <ListView fx:id="gameHistoryContainer" onMousePressed="#gameHistoryContainerClicked">

                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
                </ListView>
            <padding>
               <Insets bottom="5.0" right="10.0" top="5.0" />
            </padding>
            </VBox>

        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #449a6c;">
            <Button fx:id="playDeck" onMouseClicked="#handlePlayDeckClicked" style="-fx-background-color: transparent;" text="Play">
                <graphic>
                    <FontIcon fx:id="playDeckIcon" iconLiteral="mdi2p-play-circle-outline" />
                </graphic>
            </Button>

         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>

         <padding>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </padding>
        </HBox>
    </bottom>

</BorderPane>
