<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ulb.infof307.g01.components.HomeDeckComponentController">
    <Rectangle arcHeight="20" arcWidth="20" height="150" width="225" fill="lightgray" stroke="black"
               strokeWidth="1"/>

    <Button layoutX="30" layoutY="50" prefHeight="50" prefWidth="150"
            style="-fx-background-color: transparent;" text="$deckName"/>

    <Button fx:id="toggleOptions" layoutX="180" prefHeight="25" prefWidth="25"
            style="-fx-background-color: transparent;" onMouseClicked="#handleToggleOptionClicked">
        <graphic>
            <FontIcon fx:id="threeDotIcon" iconLiteral="mdi2d-dots-horizontal" iconSize="25"
                      onMouseEntered="#handleHoverOptions" onMouseExited="#handleHoverOptionsExit"/>
        </graphic>
    </Button>

    <StackPane fx:id="optionsOverlay" layoutX="180" visible="false">
        <Rectangle arcHeight="5" arcWidth="5" height="40" width="50" stroke="black" fill="lightgray"
                   strokeWidth="1"/>
        <Button fx:id="toggleOptionsShown" layoutX="180" prefHeight="25" prefWidth="25"
                style="-fx-background-color: transparent;" onMouseClicked="#handleToggleOptionClicked">
            <graphic>
                <FontIcon fx:id="threeDotIconShown" iconLiteral="mdi2d-dots-horizontal" iconSize="25"
                          onMouseEntered="#handleHoverOptions" onMouseExited="#handleHoverOptionsExit"/>
            </graphic>
        </Button>
    </StackPane>

    <StackPane fx:id="optionsPanel" layoutX="225" visible="false">
        <Rectangle arcHeight="5" arcWidth="5" height="150" width="75" fill="lightgray" stroke="black"
                   strokeWidth="1"/>
        <Label text="Options" style="-fx-text-fill: black; -fx-font-size: 20px;"/>
    </StackPane>
</AnchorPane>
