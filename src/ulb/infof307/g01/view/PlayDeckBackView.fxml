<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import org.kordamp.ikonli.javafx.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<BorderPane prefHeight="288.0" prefWidth="467.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.view.PlayDeckBackViewController">

    <left>
        <Button fx:id="previousCard" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
            <graphic>
                <FontIcon fx:id="previousCardIcon" iconLiteral="mdi2c-chevron-left" iconSize="30" />
            </graphic>
        </Button>
    </left>

    <right>
        <Button fx:id="nextCard" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
            <graphic>
                <FontIcon fx:id="nextCardIcon" iconLiteral="mdi2c-chevron-right" iconSize="30" />
            </graphic>
        </Button>
    </right>

    <center>

        <StackPane prefHeight="225.0" prefWidth="467.0">
            <Rectangle fx:id="answer" arcHeight="10" arcWidth="10" fill="#ffffff" height="174.0" stroke="#000000" strokeType="INSIDE" width="408.0">
                <effect>
                    <DropShadow color="#000000" radius="5" spread="0.5" />
                </effect>
            </Rectangle>

            <TextFlow fx:id="cardText" lineSpacing="5" />

        </StackPane>
        
    </center>


    <bottom>
        <HBox alignment="CENTER" layoutY="300.0" prefHeight="59.0" prefWidth="467.0" spacing="10">

            <Button fx:id="neverSeen" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="neverSeenIcon" iconLiteral="mdi2e-eye-remove" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="veryBad" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="veryBadIcon" iconLiteral="mdi2e-emoticon-cry" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="bad" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="badIcon" iconLiteral="mdi2e-emoticon-confused" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="average" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="mediumIcon" iconLiteral="mdi2e-emoticon-neutral" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="good" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="goodIcon" iconLiteral="mdi2e-emoticon-happy" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="veryGood" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="veryGoodIcon" iconLiteral="mdi2e-emoticon-excited" iconSize="30" />
                </graphic>
            </Button>

        </HBox>
    </bottom>


</BorderPane>
