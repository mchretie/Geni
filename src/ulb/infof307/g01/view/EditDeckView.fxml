<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.view.EditDeckViewController">

    <children>

    <!--Upper Border-->
        <BorderPane prefHeight="55.0" prefWidth="850.0" style="-fx-background-color: #449a6c;">
            <center>
                <Label fx:id="deckName" alignment="CENTER" text="Deck Name" textAlignment="CENTER" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="System Italic" size="23.0" />
                    </font>
                </Label>
            </center>
            <right>
                <ImageView fx:id="user" fitHeight="100.0" fitWidth="61.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                    <image>
                        <Image url="@../../../../img/user.png" />
                    </image>
                </ImageView>
            </right>
            <left>
                <ImageView fx:id="goBack" fitHeight="100.0" fitWidth="61.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                    <image>
                        <Image url="@../../../../img/back.png" />
                    </image>
                </ImageView>
            </left></BorderPane>

    <!--Lower Border-->
        <Pane layoutY="545.0" prefHeight="55.0" prefWidth="850.0" style="-fx-background-color: #449a6c;">
         <children>
             <ImageView fx:id="home" fitHeight="55.0" fitWidth="55.0" layoutX="300.0" pickOnBounds="true">
                 <image>
                     <Image url="@../../../../img/home.png" />
                 </image>
             </ImageView>
             <ImageView fx:id="deck" fitHeight="55.0" fitWidth="55.0" layoutX="400.0" pickOnBounds="true">
                 <image>
                     <Image url="@../../../../img/deck.png" />
                 </image>
             </ImageView>
             <ImageView fx:id="about" fitHeight="55.0" fitWidth="55.0" layoutX="500.0" pickOnBounds="true">
                 <image>
                     <Image url="@../../../../img/about.png" />
                 </image>
             </ImageView>
         </children></Pane>

    <!--Tags management-->
        <HBox layoutX="14.0" layoutY="78.0" prefHeight="20.0" prefWidth="351.0" style="-fx-background-color: #f0f0f0;">
            <children>
                <Label fx:id="tagsLabel" alignment="CENTER" text="#Tags  " textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="15.0" />
               </font></Label>
            <TextField fx:id="tagsInput" prefHeight="24.0" prefWidth="289.0" />
            </children>
        </HBox>
        <HBox fx:id="tagsCompartment" layoutX="14.0" layoutY="102.0" prefHeight="38.0" prefWidth="351.0" style="-fx-background-color: #f0f0f0;" />


    <!--Cards Manager-->
        <ScrollPane layoutX="15.0" layoutY="150.0" prefHeight="310.0" prefWidth="350.0" vbarPolicy="ALWAYS">
            <content>
                <VBox fx:id="cardsContainer" style="-fx-background-color: #f0f0f0;" />
            </content>
        </ScrollPane>

<!--        <VBox fx:id="cardsContainer" layoutX="15.0" layoutY="151.0" prefHeight="310.0" prefWidth="350.0" style="-fx-background-color: #f0f0f0;" />-->
        <Button fx:id="addCard" layoutX="15.0" layoutY="460.0" mnemonicParsing="false" onAction="#onAddCardButton" prefHeight="55.0" prefWidth="351.0" style="-fx-background-color: #5ab970;" text="+">
         <font>
            <Font name="Fira Sans Compressed ExtraBold Italic" size="29.0" />
        </font></Button>



    <!--Card-->
        <StackPane fx:id="frontCard" layoutX="400.0" layoutY="77.0">
            <Rectangle fx:id="frontCardRect" arcHeight="20.0" arcWidth="20.0" fill="#f0f0f0" height="205.0" width="425.0" x="50.0" y="50.0" />
            <Text fx:id="frontCardText" text="Front">
            <font>
               <Font size="27.0" />
            </font></Text>
        </StackPane>

        <StackPane fx:id="BackCard" layoutX="400.0" layoutY="310.0">
            <Rectangle fx:id="backCardRect" arcHeight="20.0" arcWidth="20.0" fill="#f0f0f0" height="205.0" width="425.0" x="50.0" y="50.0" />
            <Text fx:id="backCardText" text="Back">
                <font>
                    <Font size="27.0" />
                </font></Text>
        </StackPane>



    </children>
</AnchorPane>
