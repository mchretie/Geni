<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<BorderPane maxHeight="1280.0" maxWidth="1920.0" minHeight="400.0" minWidth="600.0" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.view.deckmenu.DeckMenuViewController">
    <!-- Search bar-->
   <top>
       <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <TextField fx:id="searchBar" alignment="CENTER" prefWidth="200.0" promptText="Rechercher des paquets / tags" />
           <!-- Search Button-->
           <Button fx:id="searchButton" layoutY="5" onMouseClicked="#handleSearchDeckEvent" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">

               <graphic>
                   <FontIcon fx:id="searchIcon" iconLiteral="mdi2m-magnify" iconSize="30" onMouseClicked="#handleSearchDeckEvent" onMouseEntered="#handleSearchHover" onMouseExited="#handleSearchExit" />
               </graphic>

           </Button>
       </HBox>
   </top>
   <center>
       <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
           <GridPane fx:id="gridPane" alignment="CENTER">
               <columnConstraints>
                   <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                   <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                   <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>

               <!-- Create deck rectangle -->
               <VBox alignment="CENTER" style="-fx-border-color: black; -fx-border-radius: 20; -fx-border-style: dashed; -fx-background-color: #d3d1d1; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
                   <TextField fx:id="createDeckField" onAction="#handleCreateDeckClicked" alignment="CENTER" promptText="Nom du paquet..." style="-fx-background-color: transparent;">
                       <cursor>
                           <Cursor fx:constant="DEFAULT" />
                       </cursor>
                       <effect>
                           <Blend />
                       </effect>
                   </TextField>
                   <Button fx:id="createDeckButton" layoutX="50" layoutY="50"
                           onMouseClicked="#handleCreateDeckClicked" prefHeight="100" prefWidth="225"
                           style="-fx-background-color: transparent;">

                       <graphic>
                           <FontIcon fx:id="createDeckIcon" iconLiteral="mdi2p-plus" iconSize="50"
                                     onMouseEntered="#handleCreateDeckHover" onMouseExited="#handleCreateDeckExit" />
                       </graphic>
                   </Button>
                   <GridPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </GridPane.margin>
               </VBox>
           </GridPane>
       </ScrollPane>
   </center>
</BorderPane>
