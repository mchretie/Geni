<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.view.playdeck.PlayDeckViewController">

    <left>
        <VBox alignment="CENTER" prefHeight="352.0" prefWidth="60.0">
            <Button fx:id="previousCardButton" layoutX="450" layoutY="5" onMouseClicked="#handlePreviousCardClicked"
                    prefHeight="30" prefWidth="30" style="-fx-border-radius: 50%;">

                <graphic>
                    <FontIcon fx:id="previousCardIcon" iconLiteral="mdi2c-chevron-left" iconSize="30"
                              onMouseEntered="#handlePreviousButtonEnter" onMouseExited="#handlePreviousButtonExited"
                              wrappingWidth="35.0" />

                </graphic>

                <VBox.margin>
                    <Insets left="10.0" />
                </VBox.margin>
                
            </Button>
        </VBox>
    </left>

    <right>
        <VBox alignment="CENTER" prefHeight="363.0">
            <Button fx:id="nextCardButton" alignment="CENTER" layoutX="450" layoutY="5" onMouseClicked="#handleNextCardClicked" onMouseEntered="#handleNextButtonEnter" onMouseExited="#handleNextButtonExited" prefHeight="30" prefWidth="30" style="-fx-border-radius: 50%">

                <graphic>
                    <FontIcon fx:id="nextCardIcon" iconLiteral="mdi2c-chevron-right" iconSize="30" />
                </graphic>

                <VBox.margin>
                    <Insets right="10.0" />
                </VBox.margin>

            </Button>
        </VBox>
    </right>

    <center>
        <HBox alignment="CENTER" prefHeight="315.0" prefWidth="732.0">
            <Button fx:id="cardButton" onMouseClicked="#onCardClicked" prefHeight="196.0" prefWidth="433.0">
                <effect>
                    <DropShadow color="#000000" radius="5" spread="0.5" />
                </effect>
            </Button>
        </HBox>
    </center>

    <bottom>
        <HBox fx:id="cardRatingBox" alignment="CENTER" layoutY="300.0" prefHeight="48.0" prefWidth="520.0" spacing="10" visible="false">
            <Button fx:id="neverSeen" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="neverSeenIcon" iconLiteral="mdi2e-eye-remove" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="veryBad" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="veryBadIcon" iconLiteral="mdi2e-emoticon-cry" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="bad" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="badIcon" iconLiteral="mdi2e-emoticon-confused" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="average" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="mediumIcon" iconLiteral="mdi2e-emoticon-neutral" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="good" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="goodIcon" iconLiteral="mdi2e-emoticon-happy" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="veryGood" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="veryGoodIcon" iconLiteral="mdi2e-emoticon-excited" iconSize="30" />
                </graphic>
            </Button>
        </HBox>
    </bottom>

</BorderPane>
