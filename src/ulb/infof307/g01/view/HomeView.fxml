<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import org.kordamp.ikonli.javafx.*?>

<?import javafx.geometry.Insets?>
<BorderPane fx:id="homeViewPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.view.HomeViewController">
    <top>
        <HBox alignment="CENTER" spacing="-40">
            <TextField fx:id="searchBar" maxWidth="${homeViewPane.width * 0.8}" prefHeight="30" promptText="Search tags / decks" style="-fx-background-color: gray" />
            <Button fx:id="searchButton" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="searchIcon" iconLiteral="mdi2m-magnify" iconSize="30" onMouseEntered="#handleSearchHover" onMouseExited="#handleSearchExit" />
                </graphic>
            </Button>
        </HBox>
    </top>

    <center>
        <ScrollPane fx:id="scrollPane" prefWidth="${homeViewPane.width}" >
            <BorderPane.margin>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </BorderPane.margin>
            <FlowPane fx:id="deckPane" prefWidth="${homeViewPane.width}" alignment="CENTER_LEFT" vgap="20" hgap="30">
                <StackPane>
                    <Rectangle arcHeight="20" arcWidth="20" fill="lightgray" height="150" stroke="black" strokeDashArray="5" width="225" />
                    <VBox>
                        <TextField fx:id="createDeckField" onAction="#handleCreateDeckEnter" prefHeight="50" prefWidth="225" promptText="Entrez un nom de deck" style="-fx-background-color: transparent;" />
                        <Button fx:id="createDeckButton" layoutX="50" layoutY="50" onMouseClicked="#handleCreateDeck" prefHeight="100" prefWidth="225" style="-fx-background-color: transparent;">
                            <graphic>
                                <FontIcon fx:id="createDeckIcon" iconLiteral="mdi2p-plus" iconSize="50" onMouseEntered="#handleCreateDeckHover" onMouseExited="#handleCreateDeckExit" />
                            </graphic>
                        </Button>
                    </VBox>
                </StackPane>
            </FlowPane>
        </ScrollPane>
    </center>
</BorderPane>
