<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ulb.infof307.g01.view.HomeViewController" fx:id="homeViewPane">
    <top>
        <HBox alignment="CENTER" spacing="-40">
            <TextField fx:id="searchBar" prefHeight="30" maxWidth="${homeViewPane.width * 0.8}"
                       style="-fx-background-color: gray" promptText="Search tags / decks"/>
            <Button fx:id="searchButton" layoutY="5" prefHeight="30" prefWidth="30"
                    style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="searchIcon" iconLiteral="mdi2m-magnify" iconSize="30"
                              onMouseEntered="#handleSearchHover" onMouseExited="#handleSearchExit"/>
                </graphic>
            </Button>
        </HBox>
    </top>

    <center>
        <ScrollPane prefWidth="${homeViewPane.width}">
            <FlowPane fx:id="deckPane" vgap="45" hgap="45" prefWidth="${homeViewPane.width}">
                <StackPane>
                    <Rectangle arcHeight="20" arcWidth="20" height="150" width="225" fill="lightgray" stroke="black"
                               strokeDashArray="5"/>
                    <VBox>
                        <TextField fx:id="createDeckField" prefHeight="50" prefWidth="225"
                                   style="-fx-background-color: transparent;" promptText="Entrez un nom de deck"
                                   onAction="#handleCreateDeckEnter"/>
                        <Button fx:id="createDeckButton" layoutX="50" layoutY="50" prefHeight="100" prefWidth="225"
                                style="-fx-background-color: transparent;" onMouseClicked="#handleCreateDeck">
                            <graphic>
                                <FontIcon fx:id="createDeckIcon" iconLiteral="mdi2p-plus" iconSize="50"
                                          onMouseEntered="#handleCreateDeckHover"
                                          onMouseExited="#handleCreateDeckExit"/>
                            </graphic>
                        </Button>
                    </VBox>
                </StackPane>
            </FlowPane>
        </ScrollPane>
    </center>
</BorderPane>
