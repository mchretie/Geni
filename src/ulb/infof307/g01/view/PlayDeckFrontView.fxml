<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.effect.DropShadow?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.view.PlayDeckFrontViewController">

    <left>
        <VBox alignment="CENTER" prefHeight="363.0">
            <Button fx:id="previousCard" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent;">
                <graphic>
                    <FontIcon fx:id="previousCardIcon" iconLiteral="mdi2c-chevron-left" iconSize="50" />
                </graphic>
            </Button>
        </VBox>
    </left>

    <right>
        <VBox alignment="CENTER" prefHeight="363.0">
            <Button fx:id="nextCard" layoutX="450" layoutY="5" prefHeight="30" prefWidth="30" style="-fx-background-color: transparent">
                <graphic>
                    <FontIcon fx:id="nextCardIcon" iconLiteral="mdi2c-chevron-right" iconSize="50" />
                </graphic>
            </Button>
        </VBox>
    </right>

    <center>
        <HBox alignment="CENTER" prefHeight="315.0" prefWidth="732.0">
            <Button fx:id="cardButton" prefHeight="196.0" prefWidth="433.0">
                <effect>
                    <DropShadow color="#000000" radius="5" spread="0.5" />
                </effect>
            </Button>
        </HBox>
    </center>

</BorderPane>